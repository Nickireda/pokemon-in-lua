lastUpdate = ‘7/10/2014’

w,h = term.getSize()
halfw = w/2
halvfh = h/2

bg = paintutils.loadImage(“bg”)
char = paintutils.loadImage(“char”)
menu = paintutils.loadImage(“menu”)
map01 = paintutils.loadImage(“map01”)
map02 = paintutils.loadImage(“map02”)
map03 = paintutils.loadimage(“map03”)

function startLogo()
	term.setBackgroundColor(colors.blue)
	term.clear()
	term.setCursorPos(1,1)
	paintutils.drawImage(bg)
	sleep(5)
end
function tBar()
	term.clear()
term.setCursorPos(1,1) 
end
function menu()
paintutils.drawImage(menu)
while true do
local event, click, xPos, yPos = os.pullEvent(“mouse_click”)
if xPos >=1 and xPos <= 2 and yPos >=1 and yPos <=2 
then map01()

elseif xPos >=1 and xPos <=2 and yPos >= 3 and yPos <=4
then about()
	end
end

function map01()
tBar()
print(“menu”)
paintutils.drawImage(map01)
term.setCursorPos(25,20)
paintutils.drawImage(char)

	local event  = os.pullEvent() 
	if event == ‘mouse_click’
then

end	

function about()
	term.setBackgroundColor(color.black)
	
tBar()
print(“This is a pokemon-type game in Lua code created by Nickireda and Omnislashe”)
print(“The game will be continuously edited and updated to more perfectly match the actual game”)
print(“Last updated:”..lastUpdate)
end






